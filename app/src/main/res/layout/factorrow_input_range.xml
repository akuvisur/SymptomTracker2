<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/max_range"
            android:layout_alignEnd="@+id/factor_input_range"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/min_range"
            android:layout_alignStart="@+id/factor_input_range"
            android:layout_marginBottom="3dp"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/factor_input_range"
            android:layout_margin="12dp"
            android:thumbTint="@color/Factor"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/checkmark_grey"
            android:scaleType="fitXY"
            android:id="@+id/input_ok"
            android:layout_gravity="right"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:ems="10"
            android:id="@+id/factor_input_range_value"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/input_ok"
            android:layout_marginEnd="203dp"
            android:padding="4dp"
            android:layout_marginStart="4dp"
            android:focusable="false"/>
    </RelativeLayout>
</LinearLayout>