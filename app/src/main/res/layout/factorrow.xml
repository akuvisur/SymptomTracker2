<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:animateLayoutChanges="true"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/factorrow_container"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:layout_marginEnd="10dp">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/factor_title"
                android:layout_gravity="start"
                android:layout_alignTop="@+id/factor_input"
                android:paddingRight="24dp"
                android:textAlignment="textStart"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="@dimen/input_button"
                android:layout_height="@dimen/input_button"
                android:text="Missing"
                android:textSize="11sp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/factor_input"
                android:background="@drawable/rectangle_grey"
                android:layout_gravity="right"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="lorem ipsum dos nominetar adflkjadlfk jaldskfj aldkfj alkdjf lksjdflkjalskdfj lksfl kj ldkfjlkdjflkdjf kldjf"
                android:id="@+id/factor_desc"
                android:paddingRight="24dp"
                android:textAlignment="inherit"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_alignStart="@+id/factor_title"
                android:layout_below="@+id/factor_title"
                android:layout_toStartOf="@+id/factor_input" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="10dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/factor_row_color"
        android:background="@color/Missing"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="-10dp"></LinearLayout>

</LinearLayout>