<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingBottom="12dp"
    android:layout_margin="2dp"
    android:background="@drawable/generic_shadow"
    android:id="@+id/schema_row">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/schema_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="#666666"
        android:id="@+id/schema_desc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="n Symptoms"
            android:textColor="@color/Symptom"
            android:id="@+id/schema_symptoms"
            android:layout_marginRight="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="n Factors"
            android:textColor="@color/Factor"
            android:id="@+id/schema_factors" />
    </LinearLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:text="Join"
        android:id="@+id/schema_selected_join"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:drawableEnd="@android:drawable/ic_media_play"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:height="40dp"
        android:layout_gravity="end"
        />

</LinearLayout>