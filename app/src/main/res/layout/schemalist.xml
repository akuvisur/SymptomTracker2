<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingRight="12dp"
    android:paddingLeft="12dp"
    android:paddingBottom="12dp"
    android:layout_margin="2dp"
    android:id="@+id/schema_row"
    android:background="@drawable/generic_shadow">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/schema_title" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="n Symptoms"
            android:textColor="@color/Symptom"
            android:id="@+id/schema_symptoms"
            android:layout_marginRight="12dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="n Factors"
            android:textColor="@color/Factor"
            android:id="@+id/schema_factors" />
    </LinearLayout>

</LinearLayout>